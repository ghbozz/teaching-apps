<%= turbo_frame_tag dom_id(user) do %>
  <%= simple_form_for user, html: { class: "contents" } do |form| %>
    <div class="my-5">
      <%= form.input :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.input :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.input :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to 'Cancel', users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-red-500 border-red-500" %>
    </div>
  <% end %>
<% end %>

