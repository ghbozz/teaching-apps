<%= turbo_frame_tag dom_id(user) do %>
  <div class="user-details">
    <p class="my-5">
      <strong class="block font-medium mb-1">First name:</strong>
      <%= user.first_name %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Last name:</strong>
      <%= user.last_name %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Email:</strong>
      <%= user.email %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this user", user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo: false } %>
      <%= link_to "Index", users_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo: false } %>
      <%= link_to 'Edit this user', edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>
<% end %>
