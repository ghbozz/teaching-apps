<div class="container mx-auto" data-controller="hello">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-3xl my-6" data-action="click->hello#click">Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path, class: "bg-blue-500 text-white py-3 px-2" %>
</div>
